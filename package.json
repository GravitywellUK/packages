{
  "name": "root",
  "private": true,
  "scripts": {
    "initialise": "yarn",
    "reinitialise": "yarn clean && yarn",
    "build": "./node_modules/.bin/tsc -b",
    "tsc:clean": "yarn build --clean && yarn build",
    "start": "yarn build -w",
    "clean": "yarn build --clean",
    "check:clean-workspace-after-install": "git diff --exit-code",
    "cz": "git-cz",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,json",
    "lint:fix": "yarn lint --fix",
    "test": "yarn workspaces foreach run test",
    "postinstall": "yarn husky install && yarn build"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "@gravitywelluk/eslint-plugin": "^1.0.38",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.6.1",
    "@typescript-eslint/eslint-plugin": "^4.29.2",
    "@typescript-eslint/parser": "^4.29.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-modules-newline": "^0.0.6",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-config": "^27.0.6",
    "lint-staged": "^11.1.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "workspaces": [
    "./packages/backend/*",
    "./packages/frontend/*",
    "./packages/shared/*"
  ]
}
