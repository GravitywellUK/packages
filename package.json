{
  "name": "root",
  "private": true,
  "scripts": {
    "initialise": "yarn",
    "reinitialise": "yarn clean && yarn",
    "build": "./node_modules/.bin/tsc -b",
    "tsc:clean": "yarn build --clean && yarn build",
    "start": "yarn build -w",
    "clean": "yarn build --clean && lerna clean --yes",
    "check:clean-workspace-after-install": "git diff --exit-code",
    "check:configs": "lerna run check:configs",
    "cz": "git-cz",
    "lerna:init": "lerna exec --concurrency 1 -- yarn install && yarn tsc && lerna link --force-local",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,json",
    "lint:fix": "yarn lint --fix",
    "postinstall": "yarn husky install && yarn lerna:init && yarn build",
    "test": "lerna run test --concurrency 1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "@gravitywelluk/eslint-plugin": "^1.0.36",
    "@types/jest": "^27.0.0",
    "@types/node": "^16.6.0",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^7.32.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  },
  "workspaces": [
    "./packages/backend/*",
    "./packages/frontend/*",
    "./packages/shared/*"
  ]
}
