{
  "name": "root",
  "private": true,
  "scripts": {
    "initialise": "yarn && yarn lerna:init && yarn build",
    "reinitialise": "yarn clean && yarn && yarn lerna:init && yarn build",
    "build": "./node_modules/.bin/tsc -b",
    "build:clean": "yarn build --clean && yarn build",
    "start": "yarn build -w",
    "clean": "yarn build --clean && lerna clean --yes",
    "check:clean-workspace-after-install": "git diff --quiet --exit-code",
    "check:configs": "lerna run check:configs",
    "cz": "git-cz",
    "lerna:init": "lerna bootstrap --ignore-scripts && lerna link --force-local",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,json",
    "lint:fix": "yarn lint --fix",
    "postinstall": "yarn lerna:init && yarn build",
    "test": "lerna run test --concurrency 1",
    "post-checkout": "yarn",
    "post-merge": "yarn",
    "pre-commit": "yarn lint-staged",
    "pre-push": "yarn build:clean && yarn lint"
  },
  "hooks": {
    "post-checkout": "yarn post-checkout",
    "post-merge": "yarn post-merge",
    "pre-commit": "yarn pre-commit",
    "pre-push": "yarn pre-push"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [ "eslint --fix" ]
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "devDependencies": {
    "@gravitywelluk/eslint-plugin": "^1.0.26",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "cz-lerna-changelog": "^2.0.3",
    "eslint": "^7.10.0",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.0",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
